<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platao.mybatis.dao.StudentDao">
    <resultMap id="studentResultMap" type="student">

    </resultMap>
    <!--增-->
    <insert id="insert" parameterType="student"
            useGeneratedKeys="true" keyProperty="id">
        insert into school.student (name, birth, gender)
        values (#{name}, #{birth}, #{gender})
    </insert>

    <insert id="insertReturnPrimeKey" parameterType="student">
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
            select last_insert_id()
        </selectKey>
        insert into school.student
        values (#{id}, #{name}, #{birth}, #{gender})
    </insert>

    <!--删-->
    <delete id="delete">
        delete
        from school.student
        where id = #{id}
    </delete>

    <!--改-->
    <update id="updateById"
            parameterType="student">
        update school.student
        set name   = #{name},
            birth  = #{birth},
            gender = #{gender}
        where id = #{id}
    </update>

    <!--查-->
    <!--查询所有-->
    <select id="selectAll"
            resultType="student">
        select *
        from school.student
    </select>
    <!--通过 ID查询-->
    <select id="selectById"
            resultType="student">
        select *
        from school.student
        where id = #{id}
    </select>
    <!--动态条件查询-->
    <select id="selectWithCondition" parameterType="student"
            resultType="student">
        select * from school.student
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="birth != null">
                and birth = #{birth}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
        </where>
    </select>

    <select id="selectByNameLike" parameterType="student"
            resultMap="studentResultMap"
    >
        select *
        from school.student
        where name like '%${name}%'
    </select>

</mapper>