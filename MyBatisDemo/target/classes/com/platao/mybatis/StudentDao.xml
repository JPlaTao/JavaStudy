<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platao.mybatis.dao.StudentDao">
    <!--增-->
    <insert id="insert" parameterType="com.platao.mybatis.model.Student"
            useGeneratedKeys="true" keyProperty="id">
        insert into school.student (name, birth, gender)
        values (#{name}, #{birth}, #{gender})
    </insert>

    <!--删-->
    <delete id="delete">
        delete
        from school.student
        where id = #{id}
    </delete>
    
    <!--改-->
    <update id="updateById"
            parameterType="com.platao.mybatis.model.Student">
        update school.student
        set name   = #{name},
            birth  = #{birth},
            gender = #{gender}
        where id = #{id}
    </update>

    <!--查-->
    <!--查找所有-->
    <select id="selectAll"
            resultType="com.platao.mybatis.model.Student">
        select *
        from school.student
    </select>
    <!--通过 ID查找-->
    <select id="selectById"
            resultType="com.platao.mybatis.model.Student">
        select *
        from school.student
        where id = #{id}
    </select>
    <!--动态条件查询-->
    <select id="selectWithCondition" parameterType="com.platao.mybatis.model.Student"
            resultType="com.platao.mybatis.model.Student">
        select * from school.student
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="birth != null">
                and birth = #{birth}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
        </where>
    </select>
</mapper>